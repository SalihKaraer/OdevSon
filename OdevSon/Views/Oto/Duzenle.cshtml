@model OdevSon.Models.Oto


@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Areas/Admin/Views/Shared/_DuzenleAdmin.cshtml";
}

<h2>Arac Bilgileri Düzenleme İşlemi</h2>

@using (Html.BeginForm("Duzenle", "Oto", FormMethod.Post))
{
    @Html.HiddenFor(a => a.AracId)
    <div class="form-group">
        @Html.LabelFor(a => a.Marka)
        @Html.TextBoxFor(a => a.Marka, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Model)
        @Html.TextBoxFor(a => a.Model, new { @class = "form-control" })
    </div>

    <input type="submit" name="btnKaydet" value="Kaydet" class="btn btn-success" />
}

