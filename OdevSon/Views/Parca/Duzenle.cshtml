@model OdevSon.Models.Parca


@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Areas/Admin/Views/Shared/_DuzenleAdmin.cshtml";
}

<h2>Parca Bilgileri Düzenleme İşlemi</h2>

@using (Html.BeginForm("Duzenle", "Parca", FormMethod.Post))
{
    @Html.HiddenFor(p => p.ParcaId)
    <div class="form-group">
        @Html.LabelFor(p => p.ParcaAd)
        @Html.TextBoxFor(a => a.ParcaAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.ParcaTur)
        @Html.TextBoxFor(p => p.ParcaTur, new { @class = "form-control" })
    </div>

    <input type="submit" name="btnKaydet" value="Kaydet" class="btn btn-success" />
}
